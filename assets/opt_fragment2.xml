<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sd_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:textSize="30sp"
        android:background="#008888" />

    <LinearLayout
        android:id="@+id/opt_app_cache"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_cache" />

        <TextView
            android:id="@+id/opt_appcache_summary"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
             />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@android:drawable/arrow_down_float"
            android:contentDescription="@null"/> <!-- 右向的  箭头 -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/opt_sd_cache"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sdcard_cache" />

        <TextView
            android:id="@+id/opt_sdcache_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@android:drawable/arrow_down_float"
            android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/opt_kill_app"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kill_app" />

        <TextView
            android:id="@+id/opt_kill_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@android:drawable/arrow_down_float"
            android:contentDescription="@null"/>
    </LinearLayout>

    <Button
        android:id="@+id/check_clear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/start_scan"
        />

</LinearLayout>