<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#7e2920"
        android:orientation="vertical">
        
        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textSize="28sp" />
        <ImageView
            android:id="@+id/title_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/title"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@null" />
        <Button android:id="@+id/one_key_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title_img"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="@string/one_key_check" />

        <TextView
            android:id="@+id/one_key_check_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/one_key_check_never" />
            
    </RelativeLayout> 
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#c8c8c8"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/module_antivirse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/virus_scan"
            style="?android:attr/buttonBarStyle"
            android:text="@string/module_antivirse" />

        <Button
            android:id="@+id/module_optimizer"
        	style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/sys_opt"
            android:text="@string/module_optimizer" />


        <Button
            android:id="@+id/module_block"
        	style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/block"
            android:text="@string/module_block" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#c8c8c8"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/module_net"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/net"
            android:text="@string/module_net" />
        <Button
            android:id="@+id/module_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/power"
            android:text="@string/module_save" />

        <Button
            android:id="@+id/module_mac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/permission"
            android:text="@string/module_mac" />
    </LinearLayout>

</LinearLayout>
