<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/trash_sms_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ccc">


        <Button
            android:id="@+id/sms_block_cancel"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/button_cancel_selector"
            android:text="@string/sms_block_cancel"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/sms_block_clear"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/button_selector"
            android:layout_marginLeft="15dp"
            android:text="@string/sms_block_clear"
            android:layout_toRightOf="@id/sms_block_cancel"
            android:textColor="#fff"
            />

    </LinearLayout>

</RelativeLayout>