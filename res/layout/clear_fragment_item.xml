<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/opt_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:padding="10dp" />

    <TextView
        android:id="@+id/opt_item_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/opt_item_icon"
        android:text="@string/app_cache"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/opt_item_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_right" />

    <TextView
        android:id="@+id/opt_item_summary"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/opt_item_arrow"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>