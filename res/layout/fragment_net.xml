<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/net_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_launcher" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/net_anim"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:columnCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_sum"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_used"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/data_sum"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/data_sum1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/data_used"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/data_used1"
                android:textSize="24sp" />
        </GridLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/arc">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:columnCount="2">

            <Button
                android:id="@+id/data_usage_day"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/data_usage_day"
                android:gravity="bottom|center"
                android:text="@string/data_usage_day" />

            <Button
                android:id="@+id/data_usage_month"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/data_usage_month"
                android:gravity="bottom|center"
                android:text="@string/data_usage_month" />

            <Button
                android:id="@+id/data_usage_set"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/data_usage_set"
                android:gravity="bottom|center"
                android:text="@string/data_usage_set" />

            <Button
                android:id="@+id/data_usage_night"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/data_usage_mac"
                android:gravity="bottom|center"
                android:text="@string/data_usage_night" />
        </GridLayout>
    </RelativeLayout>
</FrameLayout>
